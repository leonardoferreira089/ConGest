@model IEnumerable<ConGest.Models.Collaborateur>

@{
    ViewData["Title"] = "Gestion des collaborateurs";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Gestion des collaborateurs</h1>
    <a asp-action="Create" asp-controller="Collaborateurs" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Ajouter un collaborateur
    </a>
</div>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fonction)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Couleur)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstActif)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fonction)
                </td>
                <td>
                    <div class="d-flex align-items-center">
                        <span class="badge rounded-pill me-2" style="background-color: @item.Couleur; width: 20px; height: 20px;"></span>
                        @Html.DisplayFor(modelItem => item.Couleur)
                    </div>
                </td>
                <td>
                    @if (item.EstActif)
                    {
                        <span class="badge bg-success">Actif</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactif</span>
                    }
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Edit" asp-controller="Collaborateurs" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-edit"></i> Modifier
                        </a>
                        <a asp-action="Delete" asp-controller="Collaborateurs" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                            <i class="fas fa-trash"></i> Supprimer
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        <i class="fas fa-info-circle me-2"></i>Aucun collaborateur trouvé.
    </div>
}