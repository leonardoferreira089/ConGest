@model IEnumerable<ConGest.Models.DemandeConge>

@{
    ViewData["Title"] = "Gestion des demandes de congé";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Gestion des demandes de congé</h1>
    <a asp-controller="DemandesConge" asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Nouvelle demande
    </a>
</div>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>
                Collaborateur
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateDebut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateFin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreDeJours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreation)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Collaborateur.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateDebut)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateFin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreDeJours)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreation)
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Edit" asp-controller="DemandesConge" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-edit"></i> Modifier
                        </a>
                        <a asp-action="Delete" asp-controller="DemandesConge" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                            <i class="fas fa-trash"></i> Supprimer
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        <i class="fas fa-info-circle me-2"></i>Aucune demande de congé trouvée.
    </div>
}