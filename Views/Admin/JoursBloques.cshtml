@model IEnumerable<ConGest.Models.JourBloque>

@{
    ViewData["Title"] = "Gestion des jours bloqués";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Gestion des jours bloqués</h1>
    <a asp-action="Create" asp-controller="JoursBloques" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Ajouter un jour bloqué
    </a>
</div>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DateBloquee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Raison)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UtilisateurBloqueur)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DateBloquee)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Raison)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UtilisateurBloqueur)
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Edit" asp-controller="JoursBloques" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-edit"></i> Modifier
                        </a>
                        <a asp-action="Delete" asp-controller="JoursBloques" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                            <i class="fas fa-trash"></i> Supprimer
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        <i class="fas fa-info-circle me-2"></i>Aucun jour bloqué trouvé.
    </div>
}