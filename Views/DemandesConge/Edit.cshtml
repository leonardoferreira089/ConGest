@model ConGest.Models.DemandeConge

@{
    ViewData["Title"] = "Modifier une demande de congé";
}

<h1>Modifier une demande de congé</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="DateCreation" />

            <div class="form-group">
                <label asp-for="CollaborateurId" class="control-label"></label>
                <select asp-for="CollaborateurId" class="form-control" asp-items="ViewBag.CollaborateurId"></select>
                <span asp-validation-for="CollaborateurId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DateDebut" class="control-label"></label>
                <input asp-for="DateDebut" class="form-control" type="date" value="@Model.DateDebut.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="DateDebut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateFin" class="control-label"></label>
                <input asp-for="DateFin" class="form-control" type="date" value="@Model.DateFin.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="DateFin" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Enregistrer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour à la liste</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}